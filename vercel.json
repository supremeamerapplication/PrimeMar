{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "framework": "vite",
  "env": {
    "VITE_SUPABASE_URL": "@primemar_supabase_url",
    "VITE_SUPABASE_ANON_KEY": "@primemar_supabase_key",
    "VITE_PAYSTACK_PUBLIC_KEY": "@primemar_paystack_public",
    "VITE_FLUTTERWAVE_PUBLIC_KEY": "@primemar_flutterwave_public",
    "VITE_ADMIN_EMAIL": "@primemar_admin_email"
  },
  "redirects": [
    {
      "source": "/api/:path*",
      "destination": "https://your-backend.com/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}
